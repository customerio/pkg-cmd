{
  "name": "pkg-cmd",
  "version": "0.0.0",
  "description": "Set of scripts to help with common package tasks. Supports Node and Go.",
  "bin": "./dist/index.js",
  "author": "Customer.io (https://customer.io)",
  "scripts": {
    "build": "esbuild src/index.ts --outdir=./dist --platform=node --bundle",
    "exec": "./dist/index.js exec",
    "lint": "./dist/index.js lint",
    "test": "./dist/index.js test",
    "format": "./dist/index.js format .",
    "release": "npm run build && ./dist/index.js release"
  },
  "dependencies": {
    "alex": "^11.0.0",
    "commander": "^10.0.0",
    "esbuild": "^0.17.6",
    "eslint": "^8.33.0",
    "execa": "^6.1.0",
    "inquirer": "^9.1.4",
    "jest": "^29.4.2",
    "lint-staged": "^13.1.1",
    "listr": "^0.14.3",
    "node-fetch": "^3.3.0",
    "np": "^7.6.3",
    "parse-git-config": "^3.0.0",
    "prettier": "^2.8.3",
    "spdx-license-list": "^6.6.0"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/inquirer": "^9.0.3",
    "@types/listr": "^0.14.4",
    "@types/node": "^18.13.0",
    "@types/parse-git-config": "^3.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:customerio/pkg-cmd.git"
  }
}
